// hide comment input box
$("#new_comment").hide();
// display thank you box
$("#comment_sent").tab("show");
// empty raty stars
$("#rating-stars").raty('score', 0)
// render @comments partial
$("#comments-container").html("<%= escape_javascript render(@comments) %>")
// render will paginate partial
$(".comments-paginate").html("<%= escape_javascript render('products/paginate_comments') %>")
// bind raty
$('.rated').raty({
  starHalf: '<%= asset_path 'star-half.png' %>',
  starOff: '<%= asset_path 'star-off.png' %>',
  starOn: '<%= asset_path 'star-on.png' %>',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});
